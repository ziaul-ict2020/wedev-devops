{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "WordPress - Pod Logs",
    "tags": [ "wordpress", "logs" ],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "panels": [
      {
        "type": "logs",
        "title": "WordPress Pod Logs (last 1h)",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
        "id": 1,
        "datasource": {
          "type": "loki",
          "uid": "__Loki__"
        },
        "targets": [
          {
            "expr": "{namespace=\"wordpress\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showLabels": true,
          "wrapLines": true
        }
      },
      {
        "type": "logs",
        "title": "WordPress Errors (filter)",
        "gridPos": { "x": 0, "y": 10, "w": 24, "h": 6 },
        "id": 2,
        "datasource": {
          "type": "loki",
          "uid": "__Loki__"
        },
        "targets": [
          {
            "expr": "{namespace=\"wordpress\"} |= \"error\"",
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "time": { "from": "now-1h", "to": "now" }
  },
  "overwrite": true
}
